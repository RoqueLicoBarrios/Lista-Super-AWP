<ul  id = "contenedor-lista" class="demo-list-icon mdl-list w-100"> 



 {{#listaProductos}}

    <li class="mdl-list__item">
        <span class="mdl-list__item-primary-content w-10">
            <i class="material-icons">shopping_cart</i>

        </span>
        <span class="mdl-list__item-primary-content w-30">

            {{Nombre}}
        </span>
        <span class="mdl-list__item-primary-content w-20">

            <div class="mdl-textfield mdl-js-textfield">
                <input onchange="cambiarCantidad({{id}}, this)" class="mdl-textfield__input" type="text"
                    id="sample-cantidad-{{@index}}" autocomplete="off">
                <label class="mdl-textfield__label" for="{{@index}}">{{cantidad}}</label>
            </div>
        </span>
        <span class="mdl-list__item-primary-content w-20 ml-item">

            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <input onchange="cambiarPrecio({{id}}, this)" class="mdl-textfield__input" type="text"
                    pattern="-?[0-9]*(\.[0-9]+)?" id="{{@index}}"  autocomplete="off">
                <label class="mdl-textfield__label" for="{{@index}}">{{precio}}</label>
                <span class="mdl-textfield__error">Input is not a number!</span>
            </div>
        </span>
        <span class="mdl-list__item-primary-content ml-item">

            <button onclick="borrarProd({{id}})"
                class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored">
                <i class="material-icons">remove_shopping_cart</i>
            </button>
        </span>
    </li>
 {{/listaProductos}}


</ul>


